
@{
    ViewBag.Title = "Books";
}

<h2>@ViewBag.Title</h2>
@if (ViewBag.Books != null)
{
    foreach (var book in ViewBag.Books)
    {
        <div class="panel-body">
            @Html.Label("Title", "Title:")
            <p>@book.Title</p>
            @Html.Label("Author", "Author:")
            <p>@book.Author</p>

            @using (Html.BeginForm(actionName: "Details", controllerName: "Books",
                    method: FormMethod.Get, routeValues: new {id = book.BookId}))
            {
                <button class="btn btn-primary">Details</button>
            }
        </div>
    }
}
else
{
    @Html.Display("There are no books!")
}

